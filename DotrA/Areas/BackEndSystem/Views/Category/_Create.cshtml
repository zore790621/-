@model DotrA.Areas.BackEndSystem.ViewModels.BESCategoryView

<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="create" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10 offset-1">
                                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Categorydescript, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10 offset-1">
                                    @Html.EditorFor(model => model.Categorydescript, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Categorydescript, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div><button>增加圖片按鈕</button></div>
                            <div class="multiUpload"><input type="file" id="PictureLink" name="PictureLink" /></div>

                            <hr />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="新增類型" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
