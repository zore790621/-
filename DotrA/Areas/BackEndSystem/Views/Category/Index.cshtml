@model IEnumerable<DotrA.Areas.BackEndSystem.ViewModels.BESCategoryView>

@{
    ViewBag.Title = "View";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">類型管理</strong>
                        @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-outline-info btn-sm" })
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered align-self-center">
                            <thead class="text-center">
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.CategoryName)</th>
                                    <th>@Html.DisplayNameFor(m => m.Picture)</th>
                                    <th>@Html.DisplayNameFor(m => m.Categorydescript)</th>
                                    <th>修改刪除</th>
                                </tr>
                            </thead>
                            <tbody class="text-center align-items-center">
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(item => i.CategoryName)</td>
                                        <td>
                                            @if (i.Picture != null)
                                            {
                                                <img src="@Url.Content("~/Assets/Images/Category/" + i.Picture)" alt="Alternate Text" style="width:100px;height:100px;" />
                                            }
                                            else
                                            {
                                                <img src="@Url.Content("~/Assets/Images/null.jpg")" alt="Alternate Text" style="width:100px;height:100px;" />
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(item => i.Categorydescript)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = i.CategoryID }, new { @class = "btn btn-outline-primary" })
                                            @Html.ActionLink("Delete", "Delete", new { id = i.CategoryID }, new { @class = "btn btn-outline-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section endJs{
    <script src="~/Assets/ElaAdmin/js/lib/data-table/datatables.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/jszip.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="~/Assets/ElaAdmin/js/init/datatables-init.js" charset="UTF-8"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
            $("#cancel").click(function (e) {
                $(".htesxt").html("");
            });
        });
    </script>
}