@model IEnumerable<DotrA.Areas.BackEndSystem.ViewModels.BESMemberView>

@{
    ViewBag.Title = "會員管理";
}
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">會員管理</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.MemberID)</th>
                                    <th>@Html.DisplayNameFor(m => m.MemberAccount)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.Address)</th>
                                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.RoleID)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                                {
                                    if (((DotrA.Service.Security.Identity)User.Identity).Role == "admin")
                                    {
                                        <tr onclick="location.href = '@Url.Action("Edit", "Member", new { id = m.MemberID })'">
                                            <td>@Html.DisplayFor(x => m.MemberID)</td>
                                            <td>@Html.DisplayFor(x => m.MemberAccount)</td>
                                            <td>@Html.DisplayFor(x => m.Name)</td>
                                            <td>@Html.DisplayFor(x => m.Email)</td>
                                            <td>@Html.DisplayFor(x => m.Address)</td>
                                            <td>@Html.DisplayFor(x => m.Phone)</td>
                                            <td>@Html.DisplayFor(x => m.MemberRole.RoleName)</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(x => m.MemberID)</td>
                                            <td>@Html.DisplayFor(x => m.MemberAccount)</td>
                                            <td>@Html.DisplayFor(x => m.Name)</td>
                                            <td>@Html.DisplayFor(x => m.Email)</td>
                                            <td>@Html.DisplayFor(x => m.Address)</td>
                                            <td>@Html.DisplayFor(x => m.Phone)</td>
                                            <td>@Html.DisplayFor(x => m.MemberRole.RoleName)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section topCSS{
    <link href="~/Assets/BackEndSystem/js/datatable/datatables.min.css" rel="stylesheet" />
}

@section endScripts{
    @Scripts.Render("~/BackEndSystem/datatable")
    <script src="~/Assets/BackEndSystem/js/init/datatable.js" charset="UTF-8"></script>
    <script src="~/Assets/BackEndSystem/js/zoomify.min.js"></script>
}